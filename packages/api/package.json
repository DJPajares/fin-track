{
  "name": "@fin-track/api",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "ts.check": "tsc --project tsconfig.json",
    "add-build": "git add dist",
    "dev": "nodemon --exec ts-node src/index.ts",
    "update-payments:userId": "ts-node scripts/upsertUserIdToPayments.ts",
    "update-transactions:userId": "ts-node scripts/upsertUserIdToTransactions.ts",
    "update-keys-in-collection": "ts-node scripts/updateKeysInCollection.ts",
    "update-values-in-collection": "ts-node scripts/updateValuesInCollection.ts",
    "seed-categories": "ts-node scripts/seedCategories.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "pre-commit": [
    "ts.check",
    "build",
    "add-build"
  ],
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.3",
    "moment": "^2.30.1",
    "mongoose": "^9.0.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.10.1",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
